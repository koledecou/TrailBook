<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#827717" />
            <gradient  android:angle="-90"  android:startColor="#DCE775" android:endColor="#DCE775"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#827717" />
            <solid  android:color="#D4E157"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#827717" />
            <gradient  android:angle="-90"  android:startColor="#F0F4C3" android:endColor="#D4E157" />
        </shape>
    </item>
</selector>