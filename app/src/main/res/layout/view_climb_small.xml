<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/vc_small_climb_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vn_image"
            android:layout_gravity="top|left"
            android:maxWidth="@dimen/small_note_image_max_width"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/small_note_view_image_pad"
            android:paddingTop="@dimen/small_note_view_image_pad"
            android:paddingLeft="@dimen/small_note_view_image_pad"
            android:paddingBottom="@dimen/small_note_view_image_pad" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_weight="1"
            android:minWidth="@dimen/small_note_view_min_text_panel_width"
            android:measureWithLargestChild="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/vn_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2.6 miles SE of you"
                android:id="@+id/vn_navigation_details"
                android:layout_gravity="top|left"
                android:minWidth="@dimen/small_note_view_min_text_panel_width"
                android:paddingTop="@dimen/vn_image_top_pad"
                android:textColor="@color/Black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name"
                    android:id="@+id/vc_name_label"
                    android:layout_gravity="top|left"
                    android:textColor="@color/Black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Damfino Spire"
                    android:id="@+id/vc_name"
                    android:layout_gravity="top|left"
                    android:minWidth="@dimen/small_note_view_min_text_panel_width"
                    android:textColor="@color/Black"
                    android:linksClickable="false"
                    android:layout_marginLeft="@dimen/map_message_pad" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Grade"
                    android:id="@+id/vc_text_grade_label"
                    android:layout_gravity="top|left"
                    android:textColor="@color/Black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="5.10"
                    android:id="@+id/vc_grade"
                    android:layout_gravity="top|left"
                    android:minWidth="@dimen/small_note_view_min_text_panel_width"
                    android:textColor="@color/Black"
                    android:linksClickable="false"
                    android:layout_marginLeft="@dimen/map_message_pad" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Description"
                    android:id="@+id/vc_text_description_label"
                    android:layout_gravity="top|left"
                    android:textColor="@color/Black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Pitch 1 starts in a good hand crack.  Traverse right at the end of the hand crack and climb bad rock to the belay.  Pitch 2 is a beautiful offwidth.  Pitch 3 is an easy fun chimney to the summit."
                    android:id="@+id/vc_description"
                    android:layout_gravity="top|left"
                    android:minWidth="@dimen/small_note_view_min_text_panel_width"
                    android:textColor="@color/Black"
                    android:linksClickable="false"
                    android:layout_marginLeft="@dimen/map_message_pad" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/small_note_expand_image_max_height"
            android:adjustViewBounds="true"
            android:id="@+id/vn_button_expand"
            android:src="@drawable/ic_expand_up"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:background="@color/White"
            android:baselineAlignBottom="true"
            android:layout_gravity="left" />

    </LinearLayout>

</RelativeLayout>